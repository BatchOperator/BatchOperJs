{
    "module": {
        "type": "commonjs"
    },
    "jsc": {
        "target": "es2022",
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        }
    },
    "sourceMaps": true,
    "exclude": [".*\\.spec|test\\.(j|t)s$", "mocks", "types"]
}
